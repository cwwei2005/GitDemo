<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/login_bg_a"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_edit_input">
            <ImageView
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/xz_useravatar"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="用户名"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_edit_input">
            <ImageView
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/xz_useravatar"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="密码"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_edit_input">
            <ImageView
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/xz_useravatar"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/et_pwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="再次输入密码"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/base_edit_input"
                android:layout_weight="1"
                android:layout_gravity="center">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/xz_useravatar"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/et_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="输入验证码"
                    android:background="@null"/>
            </LinearLayout>
            <Button
                android:id="@+id/bt_get_verification_code"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_pressed_01"
                android:textColor="#ffffff"
                android:text="获取验证码"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_reset_pwd"
            android:onClick="resetPwd"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="重置密码"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="@drawable/button_pressed_01"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="登录"
                android:textColor="@color/text_pressed_01"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="注册"
                android:textColor="@color/text_pressed_01"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_back2website"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="回到西筑官网->"
            android:textColor="@color/text_pressed_01"/>
    </LinearLayout>

</LinearLayout>